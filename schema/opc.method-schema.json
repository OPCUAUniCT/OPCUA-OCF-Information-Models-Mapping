{
	"id":"http://www.unictschema.it/opc.method-schema.json",
	"$schema": "http://json-schema.org/draft-04/schema#",
	"description": "The JSON Schema defined for OPC UA Method Nodes",
	"title": "OPC UA Method Node Representation",
	"definitions": {
		"x.opc.method":{
			"type": "object",
			"properties": {
				"OPCInputArguments": { 
					"type": "array",
					"items": { "$ref": "#/definitions/x.opc.argument" },
					"innermost-type": {
						"type": "string",
						"enum": ["number", "string", "boolean", "object"]
					},
					"enum-strings": {
						"type": "array",
						"items": {	"type": "string" },
						"minItems": 1
					},
					"description": "A list of OPC UA argument in a JSON format"
				 },
				"OPCOutputArguments": { 
					"type": "array",
					"items": { "$ref": "#/definitions/x.opc.argument" },
					"readOnly": true,
					"innermost-type": {
						"type": "string",
						"enum": ["number", "string", "boolean", "object"]
					},
					"enum-strings": {
						"type": "array",
						"items": {	"type": "string" },
						"minItems": 1
					},
					"description": "A list of OPC UA argument in a JSON format"
				 },
				"OPCDescription": {
					"type": "string",
					"description": "This property correspond to the OPC UA Description attribute of the OPC UA Node represented"
				},
				"OPCProperties": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"opc-property-name": { "type": "string" },
							"opc-property-value": { 
								"oneOf":[
									{ "type": "number" },
									{ "type": "string" },
									{ "type": "boolean" },
									{ "$ref": "#/definitions/x.opc.array-value" },
									{ "$ref": "#/definitions/x.opc.object-value" }
								]
							 },
							"value-type": {
								"type": "string",
								"enum": ["string", "number", "boolean", "array", "object"]
							},
							"enum-values": {
								"type": "array",
								"items": {	
									"type": "object",
									"properties": {
										"enumeration-index": { "type": "number" },
										"enumeration-value": {
											"type": "object",
											"properties": {
												"locale": { "type": "string" },
												"text": { "type": "string" }
											}
										}
									}
								},
								"minItems": 1
							},
							"num-dimensions": { "type": "integer" },
							"innermost-type": {
								"type": "string",
								"enum": ["number", "string", "boolean", "object"]
							}
						},
						"required": ["opc-property-name", "opc-property-value", "value-type"],
						"additionalProperties": false
					},
					"minItems": 1,
					"description": "A list of OPC UA Property in a JSON format"
				},
				"executable": { "type": "boolean" }
			},
			"required": ["executable", "timestamp", "last-request-identifier"]
        },
        "x.opc.argument": {
			"type": "object",
			"properties": {
				"opc-argument-name": { "type": "string" },
				"opc-argument-value": { 
					"oneOf":[
						{ "type": "number" },
						{ "type": "string" },
						{ "type": "boolean" },
						{ "$ref": "#/definitions/x.opc.array-value" },
						{ "$ref": "#/definitions/x.opc.object-value" }
					]
				 },
				"value-type": {
					"type": "string",
					"enum": ["string", "number", "boolean", "array", "object"]
				},
				"enum-values": {
					"type": "array",
					"items": {	
						"type": "object",
						"properties": {
							"enumeration-index": { "type": "number" },
							"enumeration-value": {
								"type": "object",
								"properties": {
									"locale": { "type": "string" },
									"text": { "type": "string" }
								}
							}
						}
					},
					"minItems": 1
				},
				"num-dimensions": { "type": "integer" },
				"innermost-type": {
					"type": "string",
					"enum": ["number", "string", "boolean", "object"]
				}
			},
			"required": ["opc-argument-name", "opc-argument-value", "value-type"],
			"additionalProperties": false
		},
		"x.opc.array-value": {
			"type": "array",
			"items": {
				"oneOf":[
					{ "type": "number" },
					{ "type": "string" },
					{ "type": "boolean" },
					{ "$ref": "#/definitions/x.opc.array-value" },
					{ "$ref": "#/definitions/x.opc.object-value" }
				]
			}
		},
		"x.opc.object-value": {
			"type": "object",
			"properties": {
				"fields": {
					"type": "array",
					"items": { "$ref": "#/definitions/x.opc.object-field" },
					"minItems": 1
				}
			},
			"required": ["fields"]
		},
		"x.opc.object-field": {
			"type": "object",
			"properties": {
				"field-name": { "type": "string" },
				"field-value": {
					"oneOf":[
						{ "type": "number"},
						{ "type": "string" },
						{ "type": "boolean" },
						{ "$ref": "#/definitions/x.opc.array-value" },
						{ "$ref": "#/definitions/x.opc.object-value" }
					]
				},
				"value-type": {
					"type": "string",
					"enum": ["string", "number", "boolean", "array", "object"]
				},
				"enum-values": {
					"type": "array",
					"items": {	
						"type": "object",
						"properties": {
							"enumeration-index": { "type": "number" },
							"enumeration-value": {
								"type": "object",
								"properties": {
									"locale": { "type": "string" },
									"text": { "type": "string" }
								},
								"required": ["locale", "text"]
							}
						},
						"required": ["enumeration-index", "enumeration-value"]
					},
					"minItems": 1
				},
				"num-dimensions": { "type": "integer" },
				"innermost-type": {
					"type": "string",
					"enum": ["number", "string", "boolean", "object"]
				}
			},
			"required": ["field-name", "field-value", "value-type"],
			"additionalProperties": false
		} 
	},
	"type": "object",
	"allOf": [
		{"$ref": "oic.core.json#/definitions/oic.core"},
		{"$ref": "#/definitions/x.opc.method"}	
	]
}
